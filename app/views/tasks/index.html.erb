<h1 class=center-text>My Tasks</h1>
<div class=list>
  <% @tasks.each do |task| %>
   <li><label><input type="checkbox" class="form-control" <%= "checked" if task.completed %>/><%= link_to task.title, task_path(task) %> //  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</label></li>
  <% end %>
  <%= link_to "Add a new task", new_task_path %>
</div>



